    body(id="page-top", data-spy="scroll", data-target=".navbar-fixed-top")

        // Navigation
        nav.navbar.navbar-hmm.navbar-fixed-top(role='navigation')
            .container
                .navbar-header.page-scroll
                    button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-ex1-collapse')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand.page-scroll(href='#page-top')
                        span(class="glyphicon glyphicon-heart" style='font-size: 2.5em; line-height: 0.5em')
                // Collect the nav links, forms, and other content for toggling
                .collapse.navbar-collapse.navbar-ex1-collapse
                    ul.nav.navbar-nav
                        // Hidden li included to remove active class from about link when scrolled up past about section
                        li.hidden
                            a.page-scroll(href='#page-top')
                        li
                            a.page-scroll(href='#timer') Time
                        li
                            a.page-scroll(href='#events') Events
                        li
                            a.page-scroll(href='#hotels') Accomodations
                        li
                            a.page-scroll(href='#reno') Reno
                        li
                            a.page-scroll(href='#registry') Registry
                        li
                            a.page-scroll(href='#contact') Contact

        // /.navbar-collapse
            // /.container
        // Intro Section
        section#intro.intro-section
            ul#scene(style='height: 100%')
                li.layer.starlight-front(data-depth="0.25")
                li.layer.starlight-mid(data-depth="0.20")
                li.layer.starlight-back(data-depth="0.15")
                li.layer.starlight-more-back(data-depth="0.10")
                li.layer.starlight-super-back(data-depth="0.05")
                li.layer(data-depth="0")
                    .container.text-center(style="margin-top: 50px;")
                        .row
                            .col-xs-12
                                h1.white-text October 8th, 2017
                        .row
                            .col-xs-12
                                h1.white-text.cursive.bigtext Save the Date
                        .row
                            .col-xs-12
                                h4.white-text for the wedding of
                        .row
                            .col-xs-12
                                h1.yellow-text.cursive.bigtext Holly Marie Spohn &
                                h1.yellow-text.cursive.bigtext Michael Joseph Mason
        section#timer.timer-section
            .container
                .row
                    .col-lg-3.col-lg-offset-1
                        img(src='/img/bride.png', height='200px')
                    .col-lg-4
                        h1(style='font-size: 5em;')
                            script.
                                var startd = new Date();
                                var endd = new Date("2017-10-08");
                                var diff = new Date(endd - startd);
                                var days = diff / 1000 / 60 / 60 / 24;
                                document.write(Math.max(Math.ceil(days), 0));
                        h1 Days Remaining
                    .col-lg-3
                        img(src='/img/groom.png', height='200px')
    section#events.events-section
            .container
                .row
                    .col-lg-12
                        h1 Wedding Events
                        p Great Basin Oct 7
                        p Rehearsal Dinner Oct 7
                        p Wedding Oct 8
        section#hotels.hotels-section
